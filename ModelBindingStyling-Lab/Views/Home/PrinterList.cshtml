@model IEnumerable<ThreeDPrinters>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <style>
        .card {
            margin-bottom: 15px;
        }
        .table-responsive {
            margin-top: 15px;
        }
    </style>
</head>
<body>
    <h1>PrinterList</h1>

    <div class="container mt-5">
        <!-- Mobile Layout -->
        <div class="d-block d-md-none">
            <div class="row">
                <div class="col-12">
                    @foreach (var item in Model)
                    {
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">@item.Title</h5>
                                <p class="card-text">Model: @item.BuildVolume</p>
                                <p class="card-text">Status: Available</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Desktop Layout -->
        <div class="d-none d-md-block">
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Printer Name</th>
                            <th>Model</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Title</td>
                                <td>@item.BuildVolume</td>
                                <td>Available</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>
